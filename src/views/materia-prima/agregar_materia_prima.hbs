<div class="container p-4">
    <div class="row">
        <div class="col-md-9 mx-auto">
            <div class="card">
                <h2 class="text-center">Ingresar materia a Prima</h2>
                <div class="card-body">
                    <form action="#" method="POST">
                        <div class="form-group">
                            <div class="form-group">
                                <label>Seleccione la materia Prima a Ingresar</label>
                                <select id="lista_materia_prima" class="form-control" name="materiaprima_id">
                                    {{#each materiasprimas}}
                                    <option value="{{id}}">{{nombre}}</option>
                                    {{else}}
                                    <option value="0" selected>---------------</option>
                                    {{/each}} --}}
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Cantidad a Ingresar</label>
                            <input type="number" name="cantidad" class="form-control"
                                placeholder="Cantidad a Realizar">
                        </div>
                        <div class="form-group">
                            <label>Precio Unitario</label>
                            <input type="number" name="preciounitario" step="0.01" class="form-control"
                                placeholder="precio unitario">
                        </div>

                </div>
                <div class="from-group">
                    <button class="btn btn-success btn-block">
                        Agregar Materia Prima
                    </button>
                </div>
                </form>
            </div>
        </div>
    </div>
</div>
</div>