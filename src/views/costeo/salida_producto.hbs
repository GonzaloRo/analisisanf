<div id="content-wrapper">
    <div class="container-fluid">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/costeo/producto_terminado_entrada">
                    Productos Terminados
                </a>
            </li>
            <li class="breadcrumb-item active">Salida de Producto</li>
        </ol>
    </div>
</div>
<div class="container p-4">
    <div class="row">
        <div class="col-md-9 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/costeo/salida_producto" method="POST">
                        <div class="form-group">
                            <select class="m-2 form-control" name="tipoproducto" id="tipoproducto">
                                <option value="silla">Silla</option>
                                <option value="mesa" selected>Mesa</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Cantidad</label>
                             <input type="number" name="cantidadproducto" min="1" class="form-control" placeholder="Cantidad">
                        </div>
                      
                        <div class="form-group">
                            <label >Detalle de Salida</label>
                            <input type="text" name ="detalle" class="form-control" placeholder="detalle">
                        </div>
                        <div class="form-group">
                            <Label>Digite el monto de venta</Label>
                            <input type="number" name="monto" min="1" step="0.01" class="form-control" placeholder="Numero de Procesos">
                        </div>
                        <div class="from-group">
                            <button class="btn btn-success btn-block">
                                Registrar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>