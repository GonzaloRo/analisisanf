<div id="content-wrapper">
        <div class="container-fluid">
                <!-- Breadcrumbs-->
                <ol class="breadcrumb">
                <li class="breadcrumb-item">
                            <a href="/contabilidad_general">
                            Contabilidad General
                            </a>
                        </li>
                        <li class="breadcrumb-item active">Transaccion</li>
                </ol>
                <!-- DataTables -->
                <div class="alert bold alert-info">
                        <i class="fas fw fa-plus-circle"></i>
                        <a href="/contabilidad_general/transaccion/agregar_transaccion">
                        <strong>¡Click Aquí para agregar una nueva transaccion!</strong>
                        </a>
                </div>
                <div class="alert bold alert-info">
                        <i class="fas fw fa-plus-circle"></i>
                        <a id="realizar_transaccion" href="#">
                        <strong>¡Click Aquí para empezar a realizar ajuste!</strong>
                        </a>
                </div>
                <div class="card mb-3">
                        <div class="card-header">
                                <i class="fas fa-table"></i>
                                Transacciones
                        </div>
                        <div class="card-body">
                                <div class="table-responsive">
                                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                                <thead>
                                                        <tr>
                                                                <th># Id </th>
                                                                <th>Tipo de transacción</th>
                                                                <th>Descripción</th>
                                                                <th>Fecha</th>
                                                                <th>Monto</th>
                                                                <th>Operaciones</th>
                                                        </tr>
                                                </thead>
                                                {{#each transaccion}}
                                                <tbody>
                                                        <tr id="ID_CUENTA">
                                                                <td class="text-center">{{ID_TRANSACCION}}</td>
                                                                <td>{{NOMBRE_TIPO_TRANSACCION}}</td>
                                                                <td>{{DESCRIPCION_TRANSACCION}}</td>
                                                                <td>{{FECHA_TRANSACCION_FORMATO}}</td>
                                                                <td>${{MONTO_TRANSACCION}}</td>
                                                                <td class="text">
                                                                        <a class="fas fa-w fa-edit" name="editar" href="/contabilidad_general/transaccion/agregar_ajuste" style="color:gray !important" onclick="deshabilitar(this)">Realizar ajuste</a>
                                                                        <a class="fas fa-w fa-eye" name="ver" href="/contabilidad_general/transaccion/ver_transaccion/{{ID_TRANSACCION}}" onclick="" style="color:gray !important">Ver</a>
                                                                </td>                          
                                                        </tr>
                                                </tbody>
                                                {{else}}
                                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0"></table>
                                                        <div class="alert bold alert-danger text-center" >
                                                                <strong>¡Opps! Parece que no tienes ninguna transacción registrada.</strong>
                                                        </div>
                                                </table>
                                                {{/each}} 
                                        </table>
                                </div>
                        </div>
                </div>
        </div><!-- /.container-fluid -->
</div><!-- /.content-wrapper -->
<script type="text/javascript">
        $("#realizar_transaccion").click(function() {
                swal.fire({
                    title: '¿Esta seguro de realizar ajuste a esta transacción?',
                    text: 'NOTA: Se generará un balance de comprobacion inicial. Puede verificarlo en la parte de Estads Financieros',
                    type: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'Aceptar',
                    cancelButtonText: 'Cancelar',
                }).then((result) => {
                    if (result.value) {
                        location.href="/contabilidad_general/transaccion";
                    }
                });
            });
        function deshabilitar( link ){
                link.style.pointerEvents = 'none';
                link.style.color = '#bbb';

                setTimeout(function(){
                        link.style.pointerEvents = null;
                        link.style.color = 'blue';
                }, 3000);
        }
</script>