<div id="content-wrapper">
        <div class="container-fluid">
                <!-- Breadcrumbs-->
                <ol class="breadcrumb">
                <li class="breadcrumb-item">Contabilidad General</li>
                <li class="breadcrumb-item active">Estados Financieros</li>
                </ol>
                <!-- DataTables -->
                <div class="alert bold alert-info">
                        <i class="fas fw fa-plus-circle"></i>
                        <a href="/contabilidad_general/estados_financieros/listado">
                        <strong>¡Click Aquí para cerrar el período contable!</strong>
                        </a>
                </div>
                <div class="card mb-3">
                        <div class="card-header">
                                <i class="fas fa-table"></i>
                                Estados Financieros
                        </div>
                        <div class="card-body">
                                <div class="form-group">
                                        <div class="form-group">
                                                <input style="width: 15%" type="text" class="search form-control" placeholder="Buscar">
                                        </div>
                                </div>
                                <div class="table-responsive">
                                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                                <thead>
                                                        <tr>
                                                                <th>N°</th>
                                                                <th>Período Contable</th>
                                                                <th>Nombre del Estado Financiero</th>
                                                                <th>Operación</th>
                                                        </tr>
                                                </thead>
                                                {{#each estadofinanciero}}
                                                <tbody>
                                                        <tr id="ID_ESTADOFINANCIERO">
                                                                <td class="text-center">{{ ID_ESTADOFINANCIERO }}</td>
                                                                <td>{{ ID_PERIODOCONTABLE  }}</td>
                                                                <td>{{ NOMBRE_ESTADOFINANCIERO }}</td>
                                                                <td class="text">
                                                                        <a class="fas fa-w fa-eye" name="ver" href="#" onclick="" style="color:gray !important"></a>
                                                                </td>                          
                                                        </tr>
                                                </tbody>
                                                {{else}}
                                                <div class="card card-body text-center">
                                                        <p>¡Opps! Parece que no tienes ningún estado financiero hasta el momento.</p>
                                                </div>
                                                {{/each}}
                                        </table>
                                </div>
                        </div>
                </div>
        </div><!-- /.container-fluid -->
</div><!-- /.content-wrapper -->