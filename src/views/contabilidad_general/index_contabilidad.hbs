{{> navigation }}
<div id="content-wrapper">
        <div class="container-fluid">
                <ol class="breadcrumb">
                <li class="breadcrumb-item">
                        <a href="/">
                        Sistema Administrativo
                        </a>
                </li>
                <li class="breadcrumb-item active">Menú</li>
                </ol>
        </div>
        <!-- Icon Cards-->
        <div class="container-fluid col-8 content-center">
                <div class="card mb-3">
                        <div class="card-header">
                                <i class="fas fa-balance-scale"></i>
                                <strong>Contabilidad General</strong>
                        </div>
                        <div class="card-body">
                                <div class="row bold">
                                        <div class="col-xl-6 col-sm-6 mb-4" onclick="window.location.href='/contabilidad_general/catalogo'">
                                                <div class="card text-white" style="background-color:rgb(20, 186, 241)">
                                                <div class="card-body">
                                                        <div class="mr-5">
                                                                <i class="fas fa-fw fa-clipboard-list"></i>
                                                                <b>Catálogo de Cuentas</b>
                                                        </div>
                                                </div>
                                                <a class="card-footer text-white clearfix small z-1" href="#">
                                                        <span class="float-left">Ver Detalles</span>
                                                        <span class="float-right">
                                                        <i class="fas fa-angle-right"></i>
                                                        </span>
                                                </a>
                                                </div>
                                        </div>
                                        <div class="col-xl-6 col-sm-6 mb-4" onclick="window.location.href='/contabilidad_general/transaccion'">
                                                <div class="card text-white" style="background-color:rgb(20, 186, 241)">
                                                <div class="card-body">
                                                        <div class="mr-5">
                                                                <i class="fas fa-fw fa-database"></i>
                                                                <b>Transacciones</b>
                                                        </div>
                                                </div>
                                                        <a class="card-footer text-white clearfix small z-1" href="#">
                                                                <span class="float-left">Ver Detalles</span>
                                                                <span class="float-right">
                                                                <i class="fas fa-angle-right"></i>
                                                                </span>
                                                        </a>
                                                </div>
                                        </div>
                                        <div class="col-xl-6 col-sm-6 mb-4" onclick="window.location.href='/contabilidad_general/estados_financieros/listado'">
                                                <div class="card text-white" style="background-color:rgb(20, 186, 241)">
                                                        <div class="card-body">
                                                                <div class="mr-5">
                                                                        <i class="fas fa-fw fa-list-alt"></i>
                                                                        <b>Estados Financieros</b>
                                                                </div>
                                                        </div>
                                                        <a class="card-footer text-white clearfix small z-1" href="#">
                                                                <span class="float-left">Ver Detalles</span>
                                                                <span class="float-right">
                                                                <i class="fas fa-angle-right"></i>
                                                                </span>
                                                        </a>
                                                </div>
                                        </div>
                                        {{#if user.permiso}}
                                        <div class="col-xl-6 col-sm-6 mb-4" onClick="enviar('{{periodo_final.FECHA_PERIODO_FINAL}}')">
                                                <div class="card text-white" style="background-color:rgb(20, 186, 241)">
                                                        <div class="card-body">
                                                                <div class="mr-5">
                                                                        <i class="fas fa-fw fa-edit"></i>
                                                                        <b>Asientos de ajuste</b>
                                                                </div>
                                                        </div>
                                                        <a class="card-footer text-white clearfix small z-1" href="#">
                                                                <span class="float-left">Ver Detalles</span>
                                                                <span class="float-right">
                                                                <i class="fas fa-angle-right"></i>
                                                                </span>
                                                        </a>
                                                </div>
                                        </div>
                                        {{/if}}
                                        <div class="col-xl-6 col-sm-6 mb-4" onClick="#">
                                                <div class="card text-white" style="background-color:rgb(20, 186, 241)">
                                                        <div class="card-body">
                                                                <div class="mr-5">
                                                                        <i class="fas fa-fw fa-address-card"></i>
                                                                        <b>Planilla</b>
                                                                </div>
                                                        </div>
                                                        <a class="card-footer text-white clearfix small z-1" href="/contabilidad_general/planilla">
                                                                <span class="float-left">Ver Detalles</span>
                                                                <span class="float-right">
                                                                <i class="fas fa-angle-right"></i>
                                                                </span>
                                                        </a>
                                                </div>
                                        </div>
                                </div>
                        </div>
                </div>
        </div>
</div>
{{> footer }}
<script type="text/javascript">
        //funcion para validar que antes que desee realizar un ajuste debe cerrar periodo
        function enviar(string){
                if(string != ''){
                        window.location.href='/contabilidad_general/asiento_ajuste';
                }
                else{
                        Swal.fire({
                                type: 'warning',
                                title: 'Permiso denegado',
                                text: 'Debe cerrar el periodo actual para realizar ajuste'
                        });
                }
        }
</script>
