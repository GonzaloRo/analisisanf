{{> navigation }}
<div id="content-wrapper">
        <div class="container-fluid">
                <!-- Breadcrumbs-->
                <ol class="breadcrumb">
                <li class="breadcrumb-item">Estados Financieros</li>
                <li class="breadcrumb-item active">Balance de Comprobación Inicial</li>
                </ol>
                <div class="card mb-3">
                        <div class="card-body">
                                <div class="table-responsive">
                                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                                <thead>
                                                    <tr>
                                                        <th colspan="4" class="text-center">
                                                            PROPLASTIC S.A. DE C.V.
                                                            <br>
                                                            Balance de Comprobacion Inicial
                                                            <br>
                                                            Al {{periodocontable.FECHAFINAL}} de {{periodocontable.MES}} de {{periodocontable.ANIO}}</td>
                                                        </th>
                                                    </tr>
                                                </thead>
                                                    <tr>
                                                        <th class="text-center">CODIGO</th>
                                                        <th class="text-center">CUENTAS</th>
                                                        <th class="text-center">DEBE</th>
                                                        <th class="text-center">HABER</th>
                                                    </tr>
                                                {{#each cuentas}}
                                                <tbody>
                                                        <tr id="ID_ESTADOFINANCIERO">
                                                                <td width="15%">{{ CODIGO_CUENTA}}</td>
                                                                <td>{{ NOMBRE_CUENTA }}</td>
                                                                <td>{{ MONTO_SALDO }}</td>
                                                                <td>{{ ES_SALDO_ACREEDOR  }}</td>                     
                                                        </tr>
                                                </tbody>
                                                {{else}}
                                                <div class="card card-body text-center">
                                                        <p>¡Opps! Parece que no se puede generar un estado sin cuentas.</p>
                                                </div>
                                                {{/each}}
                                                <tr>
                                                        <th class="text-center"></th>
                                                        <th class="text-right">TOTAL</th>
                                                        <th class="text-center">{{suma_debe.DEBE}}</th>
                                                        <th class="text-center">{{suma_haber.HABER}}</th>
                                                </tr>
                                            </table>
                                </div>
                                <!--</form>-->
                        </div>
                </div>
                </div>
        </div><!-- /.container-fluid -->
</div><!-- /.content-wrapper -->
{{> footer }}