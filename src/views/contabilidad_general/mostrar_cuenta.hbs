<div class="container-fluid">
        <!-- Breadcrumbs-->
                <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="/contabilidad_general/catalogo">
                            Catalogo de cuentas
                            </a>
                        </li>
                        <li class="breadcrumb-item active">Ver Cuenta</li>
                </ol>
        <div class="row">
                <div class="col-md-6 mx-auto">
                        <div class="card">
                                <div class="card-header">
                                        <i class="fas fa-list"></i>
                                        Detalle cuenta
                                </div>
                                <div class="card-body">
                                        <form action="/contabilidad_general/catalogo/" method="GET">
                                                <div class="form-group">
                                                        <a>Codigo cuenta:</a>
                                                        <input type="number" name="CODIGO_CUENTA" class="form-control" placeholder="{{cuenta.CODIGO_CUENTA}}" disabled>
                                                </div>
                                                <div class="form-group">
                                                        <a>Nombre cuenta:</a>
                                                        <input type="number" name="NOMBRE_CUENTA" class="form-control" placeholder="{{cuenta.NOMBRE_CUENTA}}" disabled>
                                                </div>
                                                <div class="form-group">
                                                        <a>Naturaleza:</a>
                                                        <input type="text" name="TIPO_NATURALEZA_CUETA" class="form-control" placeholder="{{cuenta.TIPO_NATURALEZA_CUETA}}" disabled>
                                                </div>
                                                <div class="form-group">
                                                        <a>Saldo:</a>
                                                        <input type="text" name="Saldo" class="form-control" placeholder="Saldo" disabled>
                                                </div>
                                                <div class="form-group">
                                                        <button class="btn btn-primary btn-block">Aceptar</button>
                                                </div>
                                        </form>
                                </div>
                        </div>
                </div>
        </div>
</div>