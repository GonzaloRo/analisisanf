        //Funcion para agregar el campo del monto de iva calculado
        function agregar_campo() {
            var valor = $('input[name=Tipo_1]:checked', '#impuesto_1').val();
            var monto_tran = parseFloat($("#id_monto_transaccion").val());
            var url_nueva = "/contabilidad_general/monto_impuesto/"+monto_tran;
            console.log(valor);
            console.log("monto"+monto_tran);
            //Validar que para aplicar iva debe haber ingresado el monto de la transaccion
            if(valor == "false" && !(isNaN(monto_tran))){
                $.ajax({
                        type: 'get',
                        url: url_nueva,
                        success: function(data){
                            $('#iva_calculado').html(data);
                            console.log("SUCCESS");
                        },
                    });
            }else{
                $('#iva_calculado_1').remove();
                document.getElementById("cb_impuesto").checked = false;
                Swal.fire({
                    type: 'error',
                    title: 'Datos incompletos.',
                    text: 'Debe llenar el campo del monto de transacción para poder aplicar iva'
                });
            }
        }

