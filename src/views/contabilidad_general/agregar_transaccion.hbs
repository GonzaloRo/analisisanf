        function check() {
            var monto = parseFloat($("#id_monto_transaccion").val());
            if( monto != ''){
                document.getElementById("myCheck").checked = true;
            }
            else{
                Swal.fire({
                        type: 'error',
                        title: 'Datos incompletos.',
