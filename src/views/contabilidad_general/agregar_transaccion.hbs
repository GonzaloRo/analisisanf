    <script type="text/javascript">
        //Declaracion de variables
        var count = 0;
        var totalCargos = 0;
        var totalAbonos = 0;
        var codigo_cuentas = "";
        var cargos = "";
        var abonos = "";
        var fechas = "";
        var detalles = "";
        var abonar = "";
        var detalle_mov ="";
        var descripcion = $("#id_descripcion_transaccion").val();

        //Funcion para desactivar componentes de transaccion
        function desactivar(){
            var valor = $('input[name=Tipo_1]:checked', '#impuesto_1').val();
            if(valor == "false"){
                if( descripcion === '' && $("#id_monto_transaccion").val() === ''){
                    Swal.fire({
                        type: 'error',
                        title: 'Datos incompletos.',
                        text: 'Verifique que los campos de la transaccion que estén completos.'
                    });
                }else{
                    document.getElementById("id_tipo_transaccion").disabled = true;
                    document.getElementById("datepicker").disabled = true;
                    document.getElementById("id_monto_transaccion").disabled = true;
                    document.getElementById("id_descripcion_transaccion").disabled = true;
                    document.getElementById("cb_impuesto").disabled = true;
                }
            }else{
                if( descripcion === '' && $("#id_monto_transaccion").val() === ''){
                    Swal.fire({
                        type: 'error',
                        title: 'Datos incompletos.',
                        text: 'Verifique que los campos de la transaccion que estén completos.'
                    });
                }else{
                    document.getElementById("id_tipo_transaccion").disabled = true;
                    document.getElementById("datepicker").disabled = true;
                    document.getElementById("id_monto_transaccion").disabled = true;
                    document.getElementById("id_descripcion_transaccion").disabled = true;
                }
            }
        }
        
        //Funcion para obtener los datos de los movimientos
        function obtenerDatos(){
            console.log("agregarFila");
            count = count + 1;
            var codigoCuenta = $("#cuenta").val();
            var codigoSubCuenta = $("#sub_cuenta").val();
            var codigoSubSubCuenta = $("#sub_sub_cuenta").val();
            var cbCuenta = document.getElementById("cuenta");
            var cbSubCuenta = document.getElementById("sub_cuenta");
            var cbSubSubCuenta = document.getElementById("sub_sub_cuenta");
            var cuenta = cbCuenta.options[cbCuenta.selectedIndex].text;
            var subCuenta = cbSubCuenta.options[cbSubCuenta.selectedIndex].text;
            var subSubCuenta = cbSubSubCuenta.options[cbSubSubCuenta.selectedIndex].text; 
            var monto_mov = parseFloat($("#monto_movimiento").val());
            var correcto = false;
            detalle_mov =$("#detalle_movimiento").val();
            $(".dataTables_empty").remove();
            
            if(!isNaN(monto_mov) && abonar=="false"){//si es un numero NAN devuelve true --> !(devuelve false)=true
                if(cbCuenta.value !='0' && cuenta !='-----------------' && cbSubCuenta.value == '0' && detalle_mov != ''){
                    agregarFila(codigoCuenta, cuenta, monto_mov, abonar);
                    correcto = true;
                }else{
                    if(cbSubCuenta.value!='0' && subCuenta !='-----------------' && cbSubSubCuenta.value == '0' && detalle_mov != ''){
                        agregarFila(codigoSubCuenta, subCuenta, monto_mov, abonar);
                        correcto = true;
                    }else{
                        if(cbSubSubCuenta!='0' && subSubCuenta != '-----------------' && detalle_mov != ''){
                            agregarFila(codigoSubSubCuenta, subSubCuenta, monto_mov, abonar);
                            correcto = true;
                        }
                    }
                }
            }else{
                if(!isNaN(monto_mov) && abonar=="true"){
                    if(cbCuenta.value !='0' && cuenta !='-----------------' && cbSubCuenta.value == '0' && detalle_mov != ''){
                        agregarFila(codigoCuenta, cuenta, monto_mov, abonar);
                        correcto = true;
                    }else{
                        if(cbSubCuenta.value!='0' && subCuenta !='-----------------' && cbSubSubCuenta.value == '0' && detalle_mov != ''){
                            agregarFila(codigoSubCuenta, subCuenta, monto_mov, abonar);
                            correcto = true;
                        }else{
                            if(cbSubSubCuenta!='0' && subSubCuenta != '-----------------' && detalle_mov != ''){
                                agregarFila(codigoSubSubCuenta, subSubCuenta, monto_mov, abonar);
                                correcto = true;
                            }
                        }
                    }
                }
            }
            if(correcto==true){
                $("#monto_movimiento").val("");
                $("#detalle_movimiento").val("");
                $("#cuenta").val('3');
                $("#sub_cuenta").empty();
                $("#sub_cuenta").append('<option value="0">---------------</option>');
                $("#sub_sub_cuenta").empty();
                $("#sub_sub_cuenta").append('<option value="0">---------------</option>');
                document.getElementById("cb_cargar").checked = false;
                document.getElementById("cb_abonar").checked = false;
            }else{
                console.log("Correcto: "+correcto);
                Swal.fire({
                    type: 'error',
                    title: 'Datos incompletos.',
                    text: 'Verifique que los campos de los Movimientos estén completos.'
                });
            }
        }
        
        //Funcion para agregar una nueva fila al registrar un nuevo movimiento
        function agregarFila(codigoCuenta, cuenta, monto_mov, abonar){
            detalle_mov =$("#detalle_movimiento").val();
            fecha = $("#datepicker").val();
            if(abonar=="false"){
                fechas+=fecha+",";
                codigo_cuentas+=codigoCuenta+",";
                detalles+=detalle_mov+",";
                cargos+=monto_mov+",";
                abonos+="0,";
                totalCargos = totalCargos + monto_mov;
                console.log("CARGO")
                $("#tbBody").append(
                    "<tr><td class='text-center'>"+fecha+"</td>"+
                    "<td>"+cuenta+"</td><td>"+detalle_mov+"</td>"+
                    "<td class='text-center'>$ "+monto_mov+"</td><td></td></tr>"
                );
                $("#debe").empty();
                $("#debe").append("$ "+totalCargos);
            };
            if(abonar=="true"){
                fechas+=fecha+",";
                codigo_cuentas+=codigoCuenta+",";
                detalles+=detalle_mov+",";
                abonos+=monto_mov+",";
                cargos+="0,";
                totalAbonos = totalAbonos + monto_mov;                
                console.log("ABONO")
                $("#tbBody").append(
                    "<tr><td class='text-center'>"+fecha+"</td>"+
                    "<td>"+cuenta+"</td><td>"+detalle_mov+"</td>"+
                    "<td></td><td class='text-center'>$ "+monto_mov+"</td></tr>"
                );
                $("#haber").empty();
                $("#haber").append("$ "+totalAbonos);
            }
        };

        //Convertir fecha en forma para MYSQL
        function convertDateFormat(string) {
            var info = string.split('/');
            return info[2] + '-' + info[1] + '-' + info[0];
        }
        
        //Funcion para guardar los movimientos y transaccion realizada
        function guardarDato(){
            var codigoTipo = $("#id_tipo_transaccion").val();
            var cbTipo = document.getElementById("id_tipo_transaccion");
            var tipo = cbTipo.options[cbTipo.selectedIndex].text;
            var monto = parseFloat($("#id_monto_transaccion").val());
            var descripcion = $("#id_descripcion_transaccion").val();
            var fecha = $("#datepicker").val();
            var ajuste = "NO";
            var codigo_ajuste = 0;
            var periodo = $("#periodo_conta").val();
            var valor = $('input[name=Tipo_1]:checked', '#impuesto_1').val();
            var val_impuesto = $('#monto_iva').val();
            var totalAbonos_imp = totalAbonos + val_impuesto;
            var totalCargos_imp = totalCargos + val_impuesto;
            var is_impuesto = "";
            var monto_impuesto = "";
            console.log("impuesto"+val_impuesto);
            console.log(valor);
            if(valor == "false"){
                is_impuesto = "SI";
                monto_impuesto = $('#monto_iva').val();
                if(tipo!='' && tipo!='---------' && !isNaN(monto) && descripcion!=''){
                    if(totalCargos_imp==totalAbonos_imp){
                        $.ajax({
                            url: "/contabilidad_general/transaccion/agregar_transaccion",
                            type: "POST",
                            data: {
                                'ID_CUENTA': codigo_cuentas,
                                'FECHA_MOVIMIENTO': fecha,
                                'DETALLE_MOVIMIENTO': detalle_mov,
                                'MONTO_CARGO': cargos,
                                'MONTO_ABONO': abonos,
                                'CODIGO_TIPO_TRANSACCION': codigoTipo,
                                'MONTO_TRANSACCION': monto,
                                'DESCRIPCION_TRANSACCION': descripcion,
                                'FECHA_TRANSACCION': fecha,
                                'FECHAINICIO_PERIODO': periodo,
                                'ES_AJUSTE': ajuste,
                                'ID_TRANSACCION_AJUSTE': codigo_ajuste,
                                'ES_IMPUESTO': is_impuesto, 
                                'MONTO_IMPUESTO': monto_impuesto
                            },
                            success: function(data){
                                console.log(data);
                                console.log("SUCCESS");
                            },
                            dataType: "json"
                        }).done(function(data){
                            location.href = data.success_url;
                        }).fail(function() {
                            location.href = "/contabilidad_general/transaccion";
                        }).always(function() {
                            console.log("complete");
                        });
                    }else{
                        Swal.fire({
                            type: 'error',
                            title: '!Error en partida doble!',
                            text: 'Los movimientos registrados para esta transacción no cumplen partida doble.'
                        });
                    }
                }else{
                    Swal.fire({
                        type: 'error',
                        title: 'Datos incompletos.',
                        text: 'Verifique que los campos de la Transacción estén completos.'
                    });
                }
            }else{
                is_impuesto = "NO";
                monto_impuesto = 0;
                if(tipo!='' && tipo!='---------' && !isNaN(monto) && descripcion!=''){
                    if(totalAbonos==totalCargos){
                        if(totalAbonos==monto){
                            $.ajax({
                                url: "/contabilidad_general/transaccion/agregar_transaccion",
                                type: "POST",
                                data: {
                                    'ID_CUENTA': codigo_cuentas,
                                    'FECHA_MOVIMIENTO': fecha,
                                    'DETALLE_MOVIMIENTO': detalle_mov,
                                    'MONTO_CARGO': cargos,
                                    'MONTO_ABONO': abonos,
                                    'CODIGO_TIPO_TRANSACCION': codigoTipo,
                                    'MONTO_TRANSACCION': monto,
                                    'DESCRIPCION_TRANSACCION': descripcion,
                                    'FECHA_TRANSACCION': fecha,
                                    'FECHAINICIO_PERIODO': periodo,
                                    'ES_AJUSTE': ajuste,
                                    'ID_TRANSACCION_AJUSTE': codigo_ajuste,
                                    'ES_IMPUESTO': is_impuesto, 
                                    'MONTO_IMPUESTO': monto_impuesto
                                },
                                success: function(data){
                                    console.log(data);
                                    console.log("SUCCESS");
                                },
                                dataType: "json"
                            }).done(function(data){
                                location.href = data.success_url;
                            }).fail(function() {
                                location.href = "/contabilidad_general/transaccion";
                            }).always(function() {
                                console.log("complete");
                            });
                        }else{
                            Swal.fire({
                                type: 'error',
                                title: '!Datos incoherentes!',
                                text: 'El monto de la partida doble no concuerda con el monto de la transaccion.'
                            });
                        }
                    }else{
                        Swal.fire({
                            type: 'error',
                            title: '!Error en partida doble!',
                            text: 'Los movimientos registrados para esta transacción no cumplen partida doble.'
                        });
                    }
                }else{
                    Swal.fire({
                        type: 'error',
                        title: 'Datos incompletos.',
                        text: 'Verifique que los campos de la Transacción estén completos.'
                    });
                }
            }
        }
        
        //funcion para editar un movimiento de la tabla
        function editar(count, detalle_mov, monto_movimiento, abonar, codigoCuenta, total){
            console.log(count);
            var num = count -1;
            var nuevoTotal = total - monto_movimiento;
            $("#detalle_movimiento").val(detalle_mov);
            $("#monto_movimiento").val(monto_movimiento);
            if(abonar != true){
                document.getElementById("cb_cargar").checked = true;
                $("#debe").empty();
                $("#debe").append("$ "+nuevoTotal);
            }else{
                document.getElementById("cb_abonar").checked = true;
                $("#haber").empty();
                $("#haber").append("$ "+nuevoTotal);
            }

            console.log("#dataTable #tbBody tr:eq("+num+")");
            $("#dataTable #tbBody tr:eq("+num+")").empty();
        }

