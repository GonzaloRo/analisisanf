    //Funcion para agregar al campo del monto de ajuste su respectivo calculo
    function agregar_monto() {
        var valor = $('input[name=Tipo_ajuste1]:checked', '#monto_ajuste_1').val();
        var Calculo_sin = 0;
        var Calculo = 0;
        var plazo_a = $("#plazo_anio").val();
        var plazo_m = $("#plazo_meses").val();
        var interes_m = $("#interes_mes").val();
        var fecha_p = $("#datepicker_1").val();
