        var valor_r = $("#valor_recuperacion").val();
        var tipo = $('td#nombre_tipo').text();
        var monto_transa = $('td#monto_tran').text();
        var periodo_inicio = new Date($('td#periodo_inicio_tran').text());//Fecha inicial del periodo
        var d = periodo_inicio.getMonth()+1;//Toma los dias de la Fecha inicial del periodo
        var dias = parseInt($('td#fecha_mov').text());//Fecha transaccion
        var mes = 0;
        console.log("holaaaaaaaaaaaaa");
        console.log(dias);
        console.log(d);
        function sumarDias(d, dias){
                fecha_new = d + dias;
                return fecha_new;
        }
        console.log("Suma del mes: "+sumarDias(d, dias));
        
        //Evaluando la fecha en que se realizo la transaccion
        if(sumarDias(d, dias) >= '1' && sumarDias(d, dias) <= '12'){
                mes = 1
        }else{
                if(sumarDias(d, dias) >= '13' && sumarDias(d, dias) <= '27'){
                        mes = 0.5
                }
        }
        var monto_transacc = monto_transa.replace("$","");
        //Validar que para calcular monto de ajuste debe haber ingresado los campos respectivos
        if(valor == "false"){
            if(tipo == 'PAGO DE ALQUILER' && plazo_m != ""){
                Calculo_sin = monto_transacc / plazo_m;
                Calculo = Number(Calculo_sin.toFixed(2));
                $("#id_monto_ajuste").val(Calculo);
            }else{
                if(tipo == 'COMPRA DE EQUIPO AL CREDITO' && vida_u != "" && valor_r != ""){
                    var Cargo_dep_anual = (monto_transacc - valor_r)/vida_u;
                    var Cargo_dep_mensual = Cargo_dep_anual/12;
                    Calculo_sin = Cargo_dep_mensual * mes;
                    Calculo = Number(Calculo_sin.toFixed(2));
                    $("#id_monto_ajuste").val(Calculo);
                }else{
                    if(tipo == 'COMPRA DE EQUIPO AL CONTADO' && vida_u != "" && valor_r != ""){
                        var Cargo_dep_anual = (monto_transacc - valor_r)/vida_u;
                        var Cargo_dep_mensual = Cargo_dep_anual/12;
                        Calculo_sin = Cargo_dep_mensual * mes;
                        Calculo = Number(Calculo_sin.toFixed(2));
                        $("#id_monto_ajuste").val(Calculo);
                    }else{
                        if(tipo == 'PRESTAMO BANCARIO' && interes_m != "" && plazo_a != ""){
                            Calculo_sin = monto_transacc * (interes_m/100) * mes;
                            Calculo = Number(Calculo_sin.toFixed(2));
                            $("#id_monto_ajuste").val(Calculo);
                        }else{
                            if(tipo == 'PRESTAMO A UN EMPLEADO' && interes_m != ""){
                                Calculo_sin = monto_transacc * (interes_m/100) * mes;
                                Calculo = Number(Calculo_sin.toFixed(2));
                                $("#id_monto_ajuste").val(Calculo);
                            }else{
                                if(tipo == 'COMPRA DE SEGURO' && plazo_a != ""){
                                    var cal_plazo_anio = monto_transacc / plazo_a;
                                    Calculo_sin = (cal_plazo_anio / 12)*mes;
                                    Calculo = Number(Calculo_sin.toFixed(2));
                                    $("#id_monto_ajuste").val(Calculo);
                                }else{
                                    validar_completar_campos_transaccion();
                                }
                            }
                        }
                    }
                }
            }
        }
    }

