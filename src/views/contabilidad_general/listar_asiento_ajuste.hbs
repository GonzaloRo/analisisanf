<div id="content-wrapper">
        <div class="container-fluid">
                <ol class="breadcrumb">
                <li class="breadcrumb-item">
                                <a href="/contabilidad_general">
                                Contabilidad General
                                </a>
                        </li>
                        <li class="breadcrumb-item active">Asiento de ajuste</li>
                </ol>
                <div class="card mb-3">
                        <div class="card-header">
                                <i class="fas fa-table"></i>
                                Asientos de ajuste
                        </div>
                        <div class="card-body">
                                <div id="prueba" class="table-responsive">
                                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                                <thead>
                                                        <tr class="text-center">
                                                                <th colspan="7">Periodo contable desde: {{periodos.FECHA_PERIODO}} hasta {{periodos.FECHA_PERIODO_FINAL}}</th>
                                                        </tr>
                                                        <tr>
                                                                <th>#</th>
                                                                <th>Con ajuste</th>
                                                                <th>Tipo de transacción</th>
                                                                <th>Fecha</th>
                                                                <th>Descripción</th>
                                                                <th>Monto</th>
                                                                <th>Operaciones</th>
                                                        </tr>
                                                </thead>
                                                {{#each transaccion}}
                                                <tbody>
                                                        <tr id="ID_CUENTA">
                                                                <td class="text-center">{{ID_TRANSACCION}}</td>
                                                                <td class="text-center">{{ES_AJUSTE}}</td>
                                                                <td>{{NOMBRE_TIPO_TRANSACCION}}</td>
                                                                <td>{{FECHA_TRANSACCION_FORMATO}}</td>
                                                                <td>{{DESCRIPCION_TRANSACCION}}</td>
                                                                <td>${{MONTO_TRANSACCION}}</td>
                                                                <td id="operaciones" class="text">
                                                                        <a class="fas fa-w fa-edit" name="editar" href="/contabilidad_general/asiento_ajuste/agregar_ajuste/{{ID_TRANSACCION}}" style="color:gray !important">Realizar Ajuste</a>
                                                                        <a class="fas fa-w fa-eye" name="ver" href="/contabilidad_general/asiento_ajuste/ver_ajuste/{{ID_TRANSACCION}}" onclick="" style="color:gray !important">Ver</a>
                                                                </td>                          
                                                        </tr>
                                                </tbody>
                                                {{else}}
                                                <table class="table table-bordered" id="dataTable1" width="100%" cellspacing="0"></table>
                                                        <div class="alert bold alert-danger text-center" >
                                                                <strong>¡Opps! Parece que no tienes ninguna transacción registrada.</strong>
                                                        </div>
                                                </table>
                                                {{/each}}
                                        </table>
                                </div>
                        </div>
                </div>
        </div>
</div>