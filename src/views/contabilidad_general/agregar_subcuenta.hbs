<div class="container-fluid">
        <!-- Breadcrumbs-->
                <ol class="breadcrumb">
                <li class="breadcrumb-item">Catalogo de cuentas</li>
                <li class="breadcrumb-item active">Modificar | Agregar SubCuenta</li>
                </ol>
        <div class="row">
                <div class="col-md-6 mx-auto">
                        <div class="card">
                                <ul class="nav nav-tabs">
                                        <li class="nav-item">
                                                <a class="nav-link" href="/contabilidad_general/catalogo/agregar_cuenta">Cuenta padre</a>
                                        </li>
                                        <li class="nav-item">
                                                <a class="nav-link active" href="/contabilidad_general/catalogo/agregar_subcuenta">Sub cuenta</a>
                                        </li>
                                        <li class="nav-item">
                                                <a class="nav-link" href="/contabilidad_general/catalogo/agregar_subsubcuenta">Sub sub cuenta</a>
                                        </li>
                                </ul>
                                <div class="card-body">
                                        <form action="/contabilidad_general/catalogo/agregar_subcuenta" method="POST">
                                                <div class="form-group">
                                                        <a>Rubro:</a>
                                                        <select class="form-control" name="CODIGO_CUENTA_PADRE_SELEC">
                                                                {{#each rubro}}
                                                                <option value="{{CODIGO_CUENTA}}">{{NOMBRE_CUENTA}}</option> 
                                                                {{else}}
                                                                <option value="0" selected>---------------</option>
                                                                {{/each}}
                                                        </select>
                                                </div>
                                                <div class="form-group">
                                                        <a>Cuenta padre:</a>
                                                        <select class="form-control" name="CODIGO_CUENTA_PADRE">
                                                                {{#each cuenta_padre}}
                                                                <option value="{{ID_CUENTA}}" >{{NOMBRE_CUENTA}}</option> 
                                                                {{else}}
                                                                <option value="0" selected>---------------</option>
                                                                {{/each}}
                                                        </select>
                                                </div>
                                                <div class="form-group">
                                                        <a>Codigo cuenta:</a>
                                                        <input type="number" name="CODIGO_CUENTA" class="form-control" placeholder="Codigo cuenta" autofocus>
                                                </div>
                                                <div class="form-group">
                                                        <a>Nombre cuenta:</a>
                                                        <input type="text" name="NOMBRE_CUENTA" class="form-control" placeholder="Nombre cuenta">
                                                </div>
                                                <div class="form-group">
                                                        <a>Naturaleza:</a>
                                                        <select class="form-control" name="ID_NATURALEZA_CUENTA">
                                                                {{#each naturaleza}}
                                                                <option value="{{ID_NATURALEZA_CUENTA}}" >{{TIPO_NATURALEZA_CUETA}}</option> 
                                                                {{else}}
                                                                <option value="0" selected>---------------</option>
                                                                {{/each}}
                                                        </select>
                                                </div>
                                                <div class="form-group">
                                                        <button style="width: 50%" class="btn btn-primary">Guardar</button>
                                                        <button style="width: 49%" class="btn btn-secondary">Cancelar</button>
                                                </div>
                                        </form>
                                </div>
                        </div>
                </div>
        </div>
</div>